<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="20dp">

        <!-- Title -->
        <TextView
            android:id="@+id/presidentHomeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="President's Dashboard"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <!-- Security Guard Availability -->
        <TextView
            android:id="@+id/securityGuardLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Security Guard Availability:"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/securityGuardAvailability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Apartment Cleaning Status -->
        <TextView
            android:id="@+id/apartmentCleaningLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apartment Cleaning Status:"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/apartmentCleaningStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Orders Button -->
        <Button
            android:id="@+id/viewOrdersButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Orders"
            android:backgroundTint="@color/black"
            android:textColor="@android:color/white"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</RelativeLayout>