<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">

    <!-- Title for Security Guard Availability -->
    <TextView
        android:id="@+id/availabilityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Security Guard Availability"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!-- Switch for Security Guard Availability -->
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/availabilitySwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/availabilityText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Available" />

    <!-- Title for Apartment Cleaning -->
    <TextView
        android:id="@+id/cleaningStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/availabilitySwitch"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:text="Apartment Cleaned"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!-- Switch for Apartment Cleaning -->
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/cleaningStatusSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cleaningStatusText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Cleaned" />

    <!-- Buttons Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cleaningStatusSwitch"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Button for Adding Orders -->
        <Button
            android:id="@+id/addOrderButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Add Orders"
            android:backgroundTint="@color/black"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <!-- Button for Raising Issues -->
        <Button
            android:id="@+id/raiseIssueButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Raise Issues"
            android:backgroundTint="@color/black"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <!-- Button for Viewing Issues -->
        <Button
            android:id="@+id/viewIssuesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="View Issues"
            android:backgroundTint="@color/black"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <!-- Button for Viewing Events -->
        <Button
            android:id="@+id/viewEventsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="View Events"
            android:backgroundTint="@color/black"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <!-- Button for Updating Maintenance -->
        <Button
            android:id="@+id/updateMaintenanceButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Maintenance"
            android:backgroundTint="@color/black"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <!-- Button for Logout -->
        <Button
            android:id="@+id/logoutOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Log Out"
            android:backgroundTint="@color/black"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>