<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecurityGuardScreen"
    android:background="@drawable/background_gradient">

    <!-- Title for Security Guard Availability -->
    <TextView
        android:id="@+id/availabilityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Security Guard Availability"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!-- Switch for Security Guard Availability -->
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/availabilitySwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/availabilityText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Available" />

    <!-- Title for Apartment Cleaning -->
    <TextView
        android:id="@+id/availabilityText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/availabilitySwitch"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:text="Apartment Cleaned"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!-- Switch for Apartment Cleaning -->
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/availabilitySwitch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/availabilityText1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Cleaned" />

    <!-- Button for Adding Orders -->
    <Button
        android:id="@+id/addOrderButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/availabilitySwitch1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/black"
        android:gravity="center"
        android:text="Add Orders"
        android:textColor="@android:color/white" />

</RelativeLayout>